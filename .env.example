# OpenRouter API key (obligatoria)
OPENROUTER_API_KEY=

# IDs de modelos :free separados por coma (opcional)
# Ejemplo: openai/gpt-4o-mini:free,google/gemini-2.0-flash-exp:free
PREFERRED_FREE_MODELS=

# Fuente de modelos: free | paid
MODEL_SOURCE=free

# Whitelist de modelos pagos (IDs separados por coma, sin :free)
# Ejemplo: openai/gpt-4o,anthropic/claude-3.5-sonnet
PAID_MODELS_WHITELIST=

# IDs de modelos :free a excluir manualmente (opcional)
BLACKLIST_FREE_MODELS=

# Límite de modelos a evaluar (0 = sin límite)
MAX_MODELS=0

# Delay entre invocaciones (ms)
INVOCATION_DELAY_MS=5000

# Timeout por solicitud al endpoint de chat (ms)
REQUEST_TIMEOUT_MS=60000

# Auto-blacklist tras N errores 402 por modelo (0 desactiva)
AUTO_BLACKLIST_402_AFTER=2

# Proveedores/familias objetivo separados por coma
TARGET_PROVIDER_TAGS=openai,anthropic,gemini,deepseek,qwen,minimax
